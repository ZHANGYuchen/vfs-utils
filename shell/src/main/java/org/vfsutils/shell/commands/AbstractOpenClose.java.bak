package org.vfsutils.shell.commands;

import java.util.Set;
import java.util.TreeSet;

import org.vfsutils.shell.CommandInfo;
import org.vfsutils.shell.Engine;

public abstract class AbstractOpenClose extends AbstractCommand {

	public AbstractOpenClose(String cmd, CommandInfo info) {
		super(cmd, info);
	}

	protected Set getOpenFs(Engine engine) {
		Set openFsSet = (Set)engine.getContext().get("vfs.openfs");
	    if (openFsSet==null) {
	    	openFsSet = new TreeSet();
	    	engine.getContext().set("vfs.openfs", openFsSet);
	    }
	    return openFsSet;
	}

}